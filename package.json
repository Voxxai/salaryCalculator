{
  "name": "salary-calculator",
  "version": "1.0.0",
  "description": "Een React salariscalculator applicatie",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
